<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
<mapper namespace="com.example.mountain.repository.MountainMapper">

	<select id="showOne" resultType="com.example.mountain.entity.Mountains">
		SELECT * FROM mountains ORDER BY RAND() LIMIT 1
	</select>

	<select id="showAll" resultType="com.example.mountain.entity.Mountains">
		SELECT * FROM mountains
	</select>

	<select id="selectPref" parameterType="string" resultType="com.example.mountain.entity.Mountains">
		SELECT * FROM mountains WHERE prefecture = #{prefecture}
	</select>
	

</mapper>